<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quiz.StatisticsPage"
             BackgroundColor="{DynamicResource SecondaryColor}">
    <ContentPage.Content>
        <StackLayout Padding="20,20,20,0">
            <StackLayout Orientation="Horizontal">
                <Label Text="Bearbeitete Fragen" HorizontalOptions="StartAndExpand"/>
                <Label Text="{Binding AnsweredQuestions}" HorizontalOptions="End"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Richtig beantwortet" HorizontalOptions="StartAndExpand"/>
                <Label Text="{Binding CorrectAnswers}" HorizontalOptions="End"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Falsch beantwortet" HorizontalOptions="StartAndExpand"/>
                <Label Text="{Binding WrongAnswers}" HorizontalOptions="End"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Ãœbersprungen" HorizontalOptions="StartAndExpand"/>
                <Label Text="{Binding SkippedQuestions}" HorizontalOptions="End"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>